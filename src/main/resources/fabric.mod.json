{
  "schemaVersion": 1,
  "id": "resourcemelons",
  "version": "$version",

  "name": "Resource Melons",
  "description": "Adds melons that you can get resources from!",
  "authors": [
    "Shnupbups",
    "Lemonszz"
  ],

  "contact": {
	"homepage": "https://www.curseforge.com/minecraft/mc-mods/resource-melons",
	"sources": "https://github.com/Lemonszz/resource-melons",
	"issues": "https://github.com/Lemonszz/resource-melons/issues"
  },
  "license": "MIT License",
  "icon": "assets/resourcemelons/logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.shnupbups.resourcemelons.RMCommon"
	],
	"client": [
      "com.shnupbups.resourcemelons.RMClient"
	],
    "modmenu": [
      "com.shnupbups.resourcemelons.config.RMConfigScreen"
    ],
    "rei": [
      "com.shnupbups.resourcemelons.rei.RMPlugin",
      "com.shnupbups.resourcemelons.rei.RMClientPlugin"
    ],
    "fabric-datagen": [
      "com.shnupbups.resourcemelons.datagen.RMDatagen"
    ]
  },

  "accessWidener" : "resourcemelons.accesswidener",

  "depends": {
    "fabricloader": ">=0.6.1",
    "fabric": "*",
    "cloth-config": ">=6.0.45"
  }
}
